<?xml version="1.0"?>
<theme>
  <name>Waybang-Mocha</name>

  <!-- Window decorations -->
  <window>
    <!-- Active window -->
    <titleBar>
      <height>26</height>
    </titleBar>

    <!-- Border style -->
    <border>
      <width>2</width>
      <color active="#89b4fa" inactive="#313244"/>
    </border>

    <!-- Background for title bar -->
    <class name="ActiveWindow">
      <titleBar>
        <backgroundColor>#89b4fa</backgroundColor>
        <textColor>#11111b</textColor>
      </titleBar>
    </class>

    <class name="InactiveWindow">
      <titleBar>
        <backgroundColor>#313244</backgroundColor>
        <textColor>#cdd6f4</textColor>
      </titleBar>
    </class>
  </window>

  <!-- OSD (On-screen display) -->
  <osd>
    <backgroundColor>#1e1e2e</backgroundColor>
    <textColor>#cdd6f4</textColor>
    <borderColor>#89b4fa</borderColor>
    <borderWidth>2</borderWidth>
  </osd>
</theme>
